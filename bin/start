#! /usr/bin/env bash

. .venv/bin/activate
DJANGO='python manage.py runserver 0.0.0.0:8379'
YARN='yarn develop'

if [[ $1 == "tmux" ]];then
    tmux new-session -s ur-conf   $DJANGO
    tmux new-window  -t ur-conf:1 $YARN
else
    trap "exit" INT TERM ERR
    trap "kill 0" EXIT
    $DJANGO &
    $YARN
fi